<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tuanpv.quickanswerapi.activitys.QuestionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"
            android:id="@+id/score_text"/>

        <Button
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/bg_score"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:id="@+id/score"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Which is your mouse?"
        android:padding="12dp"
        android:layout_marginBottom="60dp"
        android:id="@+id/question"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choice_one"
        android:background="#0091AA"
        android:textColor="#fff"
        android:text="bird"
        android:padding="8dp"
        android:layout_marginBottom="24dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choice_two"
        android:background="#31FF2A"
        android:text="turtle"
        android:textColor="#fff"
        android:padding="8dp"
        android:layout_marginBottom="24dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choice_three"
        android:background="#FF0000"
        android:textColor="#fff"
        android:text="chicken"
        android:padding="8dp"
        android:layout_marginBottom="24dp" />

</LinearLayout>
